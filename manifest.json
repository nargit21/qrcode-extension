{
	"name": "QR Code Generator",
	"version": "1.0",
	"description": "Generate QR code from text",
	"manifest_version": 2,
	"page_action": {
		"default_icon": {
			"16": "images/icon.png",
			"32": "images/icon.png",
			"48": "images/icon.png"
		}
	},
	"icons": {
		"16": "images/icon.png",
		"32": "images/icon.png",
		"48": "images/icon.png"
	},
	"permissions": [
		"contextMenus"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	}
}