{
	"name": "QR Code Generator",
	"version": "1.0",
	"description": "Generate QR code from text",
	"manifest_version": 2,
	"browser_action": {
		"default_icon": "images/icon.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "images/icon.png",
		"32": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	},
	"permissions": [
		"contextMenus"
	],
	"background": {
		"scripts": [
			"background.js"	
		]
	}
}